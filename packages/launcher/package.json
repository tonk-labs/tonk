{
  "name": "@tonk/launcher",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup-wasm": "bun scripts/setup-wasm.ts",
    "clean:vite-cache": "rm -rf node_modules/.vite",
    "dev": "bun run clean:vite-cache && bun run setup-wasm && bun run build:sw:dev && (bun run watch:sw & vite)",
    "build": "tsc -b && vite build",
    "build:runtime": "bun run scripts/build-runtime.ts",
    "build:sw:dev": "TONK_SERVE_LOCAL=true vite build -c vite.sw.config.ts && cp dist-sw/service-worker-bundled.js public/app/service-worker-bundled.js",
    "watch:sw": "TONK_SERVE_LOCAL=true vite build -c vite.sw.config.ts --watch & bun scripts/watch-sw-copy.ts",
    "preview": "vite preview",
    "lint": "bun run lint:biome && bun run lint:arch",
    "lint:biome": "biome lint .",
    "lint:arch": "bunx ast-grep scan",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "validate": "bun run build && bun run lint && bun run format:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.6",
    "@tonk/core": "0.1.3",
    "clsx": "^2.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@ast-grep/cli": "^0.40.0",
    "@biomejs/biome": "^2.3.7",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.22",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vitest": "^4.0.12"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
