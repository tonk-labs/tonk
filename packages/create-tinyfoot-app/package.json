{
  "name": "@tonk/create-tinyfoot-app",
  "version": "0.1.7",
  "description": "Create AI-assisted personal software with one command",
  "type": "module",
  "bin": {
    "create-tinyfoot-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
