{
  "name": "@tonk/core-wasm",
  "version": "0.1.0",
  "description": "WASM bindings for Tonk Core - local-first sync engine",
  "main": "pkg/tonk_core.js",
  "module": "pkg/tonk_core_bg.js",
  "types": "pkg/tonk_core.d.ts",
  "files": [
    "pkg/**/*"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node -- --features wasm-node",
    "build:browser": "wasm-pack build --target web --out-dir pkg-browser -- --features wasm-browser",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler",
    "build:all": "npm run build && npm run build:node && npm run build:browser && npm run build:bundler",
    "test": "wasm-pack test --headless --firefox",
    "test:browser": "npm run build:browser && npm run serve:test",
    "test:node": "cd examples/node && npm test",
    "test:integration": "npm run test:node && npm run test:browser",
    "serve:test": "node examples/browser/server.js --port=8080 --dir=.",
    "clean": "rm -rf pkg pkg-node pkg-browser pkg-bundler"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tonk-labs/tonk.git"
  },
  "keywords": [
    "tonk",
    "local-first",
    "sync",
    "automerge",
    "wasm",
    "real-time",
    "collaboration"
  ],
  "author": "Tonk Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tonk-labs/tonk/issues"
  },
  "homepage": "https://github.com/tonk-labs/tonk#readme",
  "devDependencies": {
    "tmp": "^0.2.1",
    "wasm-pack": "^0.12.1",
    "ws": "^8.18.3"
  }
}
