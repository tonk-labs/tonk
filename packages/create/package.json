{
  "name": "@tonk/create",
  "version": "0.5.2",
  "description": "Bootstrap apps on the Tonk stack",
  "type": "module",
  "bin": {
    "tonk-create": "./bin/create.js"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "typesVersions": {
    "*": {
      "index": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "!templates/**/node_modules/**",
    "!templates/**/.pnpm/**",
    "!templates/**/pnpm-lock.yaml",
    "!templates/**/package-lock.json",
    "!templates/**/yarn.lock",
    "!templates/**/dist/**",
    "!templates/**/dev-dist/**",
    "!templates/**/.DS_Store"
  ],
  "scripts": {
    "build": "tsup && chmod +x ./dist/create.js",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check src/**/*.ts tests/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "fastmcp": "^1.20.2",
    "fs-extra": "^11.2.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.12",
    "open": "^10.1.0",
    "ora": "^7.0.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/gradient-string": "^1.1.5",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "memfs": "^4.6.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "react",
    "create-react-app",
    "cli",
    "ai",
    "local-first",
    "crdt"
  ],
  "author": "tonk-labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tonk-labs/tonk.git",
    "directory": "packages/create"
  },
  "bugs": {
    "url": "https://github.com/tonk-labs/tonk/issues"
  },
  "homepage": "https://github.com/tonk-labs/tonk#readme",
  "publishConfig": {
    "access": "public"
  }
}
