# Tonk CLI Environment Configuration
# Copy this file to .env and set your actual values

# Analytics Configuration
# PostHog API key for usage analytics
TONK_ANALYTICS_API_KEY=your_posthog_api_key_here
TONK_ANALYTICS_HOST=https://eu.i.posthog.com
TONK_ANALYTICS_ENABLED=true

# Deployment Service Configuration  
# URL of the Tonk deployment service
TONK_DEPLOYMENT_SERVICE_URL=https://your-deployment-service.com

# Default deployment configuration
TONK_DEFAULT_REGION=ord
TONK_DEFAULT_MEMORY=1gb
TONK_DEFAULT_CPUS=1

# Server Configuration
# Default Tonk server URL and port
TONK_SERVER_URL=http://localhost:7777
TONK_SERVER_PORT=7777

# Logging Configuration
# Log level: debug, info, warn, error
TONK_LOG_LEVEL=info
