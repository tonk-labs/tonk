{
  "name": "@tonk/tests",
  "version": "0.1.0",
  "description": "Tests for the Tonk stack",
  "type": "module",
  "private": true,
  "scripts": {
    "build:sw": "vite build --config vite.sw.config.ts",
    "build:ui": "vite build --config vite.config.ts",
    "build": "pnpm run build:sw && pnpm run build:ui",
    "dev:sw": "vite build --config vite.sw.config.ts --watch",
    "dev": "pnpm run build:sw && vite --config vite.config.ts",
    "preview": "vite preview",
    "test": "npm run build:sw && playwright test",
    "test:sync": "npm run build:sw && playwright test tests/sync",
    "test:bundles": "npm run build:sw && playwright test tests/bundles",
    "test:stress": "npm run build:sw && playwright test tests/stress",
    "test:uptime": "npm run build:sw && playwright test tests/uptime",
    "test:uptime:quick": "npm run build:sw && playwright test tests/uptime/gradual-load-increase.spec.ts",
    "test:distributed": "npm run build:sw && playwright test tests/distributed",
    "test:distributed:baseline": "npm run build:sw && playwright test tests/distributed/distributed-stress.spec.ts --grep @baseline",
    "test:distributed:moderate": "npm run build:sw && playwright test tests/distributed/distributed-stress.spec.ts --grep @moderate",
    "test:distributed:heavy": "npm run build:sw && playwright test tests/distributed/distributed-stress.spec.ts --grep @heavy",
    "test:distributed:stress": "npm run build:sw && playwright test tests/distributed/distributed-stress.spec.ts --grep @stress",
    "distributed:cleanup": "tsx scripts/distributed/cleanup.ts",
    "test:ui": "npm run build:sw && playwright test --ui",
    "test:headed": "npm run build:sw && playwright test --headed",
    "test:debug": "npm run build:sw && playwright test --debug",
    "report": "playwright show-report"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.705.0",
    "@aws-sdk/client-ssm": "^3.705.0",
    "@tonk/core": "file:../packages/core-js",
    "express": "^4.18.0",
    "mime": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ws": "^8.18.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.19.17",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.20.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
