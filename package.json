{
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@socketsecurity/bun-security-scanner": "^1.1.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "prepare": "husky",
    "build": "cd packages/core && bun run build && cd ../core-js && bun run build && cd ../relay-js && bun run build && cd ../launcher && bun run build && cd ../desktonk && bun run build",
    "test": "cd tests && bun test",
    "docs:distribute": "bun utils/distribute-from-docs.js",
    "docs:dev": "mdbook serve docs --open --port 4069",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write packages/*/src/**/*.ts *.md packages/*/README.md",
    "format:check": "prettier --check packages/*/src/**/*.ts *.md packages/*/README.md",
    "lint:all": "bun run lint && bun run format:check",
    "fix:all": "bun run lint:fix && bun run format"
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "@tiptap/core": "3.12.0",
    "@tiptap/pm": "3.12.0"
  },
  "workspaces": [
    "packages/*",
    "examples/file-browser",
    "tests"
  ]
}
